<main>
  <%= flash[:notice] %>
  <%= flash.now[:danger] %>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <%= render 'books/index', book: @book, user: @user %>
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= image_tag('no_image.jpg') %></td>
                <%= link_to book_path(book.id) do %>
                  <td><%= book.title %></td>
                <% end %>
                <td><%= book.body %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</main>



