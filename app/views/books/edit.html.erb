<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <%= @book.errors.count %>errors exist!
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
<% end %>

<%= form_with  model:@book, local: true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>
 <li>
   <%= link_to 'Show',book_path(@book.id) %>
 </li>
 <li>
   <%= link_to 'Back', books_path %>
 </li>

